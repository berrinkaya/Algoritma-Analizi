#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[])
{
    int dizi[]={ };
    int n;
    int i,j;
    int ort;
    
    printf("Dizi boyutunu giriniz: " );
    scanf("%d",&n);
    
    ort = n/2 ;
    
    for(i = 0 ; i < n ; i++)
    {
       printf("%d. elemani giriniz: ",i );
       scanf("%d",&dizi[i]);
       
    }
    
    printf("Liste 1 : ");
    for (i = 1 ; i<=ort ; i++ )
    {
       printf(" %d ", dizi[ort-i]);
    }
    
    printf("\nListe 2 : ");
    for (i = ort ; i<n ; i++ )
    {
       printf(" %d ", dizi[i]);
    }
    printf("\n");
    
  
  system("PAUSE");	
  return 0;
}
